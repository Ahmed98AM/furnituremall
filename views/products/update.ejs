<%- include('../partials/header') %>
<body class="productFormPages">
  <section class="productFormsPageJumbo jumbotron text-center">
    <div class="container">
      <h1 class="productFormsPageTitle">Update product</h1>
      <form action="api/products/<%=foundProduct._id%>" class="text-right updateProductForm">
        <div class="form-group">
          <label class="productFormsInputLabel">Product name</label>
          <input
            class="form-control text-right prodName"
            type="text"
            name="product[name]"
            placeholder="Product name"
            value="<%=foundProduct.name%>"
          />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Product image</label>
          <input
            class="form-control text-right prodImg"
            type="text"
            name="product[image]"
            placeholder="Product image"
            value="<%=foundProduct.image%>"
          />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Product price</label>
          <input
            class="form-control text-right prodPriceA"
            type="number"
            name="product[priceA]"
            value="<%=foundProduct.priceA%>"
            placeholder="Base"
          />
          <input
            class="form-control text-right prodPriceB"
            type="number"
            name="product[priceB]"
            value="<%=foundProduct.priceB%>"
            placeholder="wholesale"
          />
          <input
            class="form-control text-right prodPriceC"
            type="number"
            name="product[priceC]"
            value="<%=foundProduct.priceC%>"
            placeholder="Retail"
          />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Nubmer of items availabe of the product</label>
          <input
            class="form-control text-right prodNumber"
            type="number"
            name="product[number]"
            placeholder="Nubmer of products availabe"
            value="<%=foundProduct.number%>"
          />
        </div>
        <button type="submit" class="btn btn-primary productFormsSubmitButton addProductSubmitButton">Update</button>
      </form>
    </div>
  </section>

  <%- include('../partials/footer') %>
</body>
