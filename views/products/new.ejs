<%- include('../partials/header') %>
<body class="productFormPages">
  <section class="productFormsPageJumbo jumbotron text-center">
    <div class="container">
      <form class="text-right addProductForm">
        <div class="form-group">
          <label class="productFormsInputLabel">Product name</label>
          <input class="form-control text-right prodName" type="text" name="product[name]" />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Product image</label>
          <input class="form-control text-right prodImg" type="text" name="product[image]" />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Product price</label>
          <input class="form-control text-right prodPriceA" type="text" name="product[priceA]" placeholder="Base" />
          <input class="form-control text-right prodPriceB" type="text" name="product[priceB]" placeholder="Retail" />
          <input
            class="form-control text-right prodPriceC"
            type="text"
            name="product[priceC]"
            placeholder="wholesale"
          />
        </div>
        <div class="form-group">
          <label class="productFormsInputLabel">Number of items availabe</label>
          <input class="form-control text-right prodNumber" type="number" name="product[number]" />
        </div>
        <button type="submit" class="btn btn-primary btn-style-one addProductSubmitButton">Add</button>
      </form>
    </div>
  </section>
  <%- include('../partials/footer') %>
</body>
