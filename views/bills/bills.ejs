<%- include('../partials/header') %>

<body class="billsPage">
  <section class="billPageJumbo jumbotron text-center">
    <div class="container">
      <h1 class="billPageTitle">Mall's bills</h1>
      <p>
        <a class="btn btn-primary my-2 addBillButton">Add a bill</a>
      </p>
    </div>
  </section>

  <div class="container billImgsContainer">
    <div class="row">
      <% foundBills.forEach(function(bill){ %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm text-right billSheetsContainer cardSheets">
          <div class="card-body">
            <div class="text-left">
              <div class="btn-group">
                <form action="/bills/<%=bill._id%>/update" method="get">
                  <button class="btn btn-info billFormButtons"></button>
                </form>
                <form action="api/bills/<%=bill._id%>" class="delBillForm">
                  <button type="submit" class="btn btn-danger billFormButtons"></button>
                </form>
              </div>
            </div>
            <% let date= JSON.stringify (bill.created_at); let counter= 0;%> <%if(bill.created_at){%>
            <div class="row">
              <div class="col-lg-6">
                <h6>
                  <span class="billCardDateHeader">Hour: </span>
                  <span class="billCardFooter"><%= date.substring(12,17)%></span>
                </h6>
              </div>
              <div class="col-lg-6">
                <h6>
                  <span class="billCardDateHeader">Date: </span>
                  <span class="billCardFooter"><%= date.substring(1,11)%></span>
                </h6>
              </div>
            </div>
            <%}%>
            <ul class="billsSheetsList list-group list-group-flush mb-1">
              <%bill.billProducts.forEach(function(billProduct){%>
              <li class="list-group-item p-0 pr-2 cardList">
                <h8>Number of items</h8>: <%= billProduct.number %> <span class="badge badge-primary badge-pill">-</span
                ><h8> Product</h8>: <%= billProduct.name %> <span class="badge badge-primary badge-pill">-</span>
                <h8>Price </h8>:<%= (billProduct.price*1)*billProduct.number %><h8> EGP </h8>
              </li>
              <%})%>
              <button class="btn btn-sm text-center billFullpriceButton" disabled>
                Total price : <%=bill.priceSum%>EGP
              </button>
            </ul>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
    <%- include('../partials/footer') %>
  </div>
</body>
